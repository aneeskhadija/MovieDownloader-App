<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/button_buy"
        style="@style/Widget.AppCompat.Button.Colored"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        card_view:cardCornerRadius="7dp"
        card_view:cardElevation="7dp"
        android:text="@string/buy"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
        app:layout_constraintTop_toTopOf="@+id/barrier_bottom_poster"
        android:layout_marginLeft="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints" >

            <TextView
                android:id="@+id/id_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Size: 0"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:id="@+id/id_seeds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seeds: 0"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:id="@+id/id_peers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Peers: 0"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/colorWhite"/>

            <Button
                android:id="@+id/id_btn_download"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="1080p Download"
                android:textColor="@color/colorWhite"
                android:background="@color/colorAccent"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>